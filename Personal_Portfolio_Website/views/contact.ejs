<%- include('partials/header') %>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title text-center">Contact Me</h2>
                <p class="text-center">Have a question or want to work together? Feel free to send me a message.</p>
                
                <% if (typeof status !== 'undefined') { %>
                    <% if (status === 'success') { %>
                        <div class="alert alert-success">Message sent successfully!</div>
                    <% } else if (status === 'error') { %>
                        <div class="alert alert-danger">Failed to send message. Please try again later.</div>
                    <% } %>
                <% } %>


                <form action="/contact" method="POST">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Message</label>
                        <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Send Message</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>

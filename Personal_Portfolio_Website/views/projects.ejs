<%- include('partials/header') %>

<div class="row">
    <div class="col-md-12 text-center">
        <h2>My Projects</h2>
        <p>Here are some of the projects I've worked on. You can find more on my <a href="<%= personalInfo.github %>" target="_blank">GitHub</a>.</p>
    </div>
</div>

<div class="row mt-4">
    <% personalInfo.work.forEach(project => { %>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><%= project.title %></h5>
                    <p class="card-text"><%= project.description %></p>
                    <a href="<%= project.github %>" class="btn btn-primary mt-auto" target="_blank">View on GitHub</a>
                    <% if (project.liveUrl) { %>
                        <a href="<%= project.liveUrl %>" class="btn btn-success mt-2" target="_blank">Live Demo</a>
                    <% } %>
                </div>
            </div>
        </div>
    <% }) %>
</div>

<%- include('partials/footer') %>
